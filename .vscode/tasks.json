{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
            "presentation": {
                "reveal": "always",
                "echo": true,
                "focus": false,
                "panel": "shared"
            },
            "runOptions": {
                "postRunTask": "moveExecutable"
            }
        },
        {
            "label": "moveExecutable",
            "type": "shell",
            "command": "mv",
            "args": [
                "${fileBasenameNoExtension}.exe",
                "${workspaceFolder}/build/"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
